{
    "extends": "tsconfig/react-library.json",
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["dist", "build", "node_modules"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "ui/*": ["./*"],
            "ui": ["."]
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
}
